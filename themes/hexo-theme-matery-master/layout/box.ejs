<main >
	<script type="text/javascript">
		$(function() {
			$("#navContainer").addClass("addHeadColor")
		})
		
	</script>
	<style>
		.addHeadColor{
			background: linear-gradient(to right, rgba(0, 204, 204, 0.6) 0%, rgba(0, 255, 153, 0.6) 100%);
			box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 7px 10px 0 rgba(0, 0, 0, 0.12);
		}

		/* 总box div */
		.box {
			height: 530px;
			background-color: rgba(196,196,196 ,0.8);
			border: 12px solid rgba(255,255,255,0.9);
			border-radius: 0 0 2px 2px;
		}

		.box * {
			font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
		}

		/* 左边菜单项div */
		.boxNavDiv {
			background-color: rgba(90, 90, 90, 0.8);
			height: 100%;
			overflow: scroll;
		}

		/* 左边菜单项里的logo div*/
		.boxLogoDiv {
			font-family: sans-serif;
			height: 150px;
			font-size: 35px;
			font-weight: bolder;
			color: #48DD22;
			line-height: 133px;
			background-color: whitesmoke;
			background-image: url(https://api.ixiaowai.cn/api/api.php);
			background-size: cover;
			opacity: 0.9;
		}

		/* 左边菜单项里a标签 */
		.boxNav>a {
			width: 100%;
			height: 50px;
			font-size: 21px;
			border: 2px solid rgba(204, 204, 255, 1);
			cursor: pointer;
			background-color: rgba(214, 165, 92, 1);
			text-align: center;
			line-height: 47px;
		}

		.boxNav>a:hover {
			background-color: rgba(78, 228, 228, 0.8);
		}

		/* 右边内容主体 */
		.boxContentDiv {
			background-color: rgba(221, 221, 221, 0.5);
			height: 100%;
			overflow: scroll;
		}

		/* 右边内容里的分类标题 */
		.boxContentTitle {
			font-size: 28px;
			font-weight: 600;
			background: #ffffcc;
			border: 1px solid white;
		}

		/* 右边内容里的每一项 */
		.boxCart {
			height: 93px;
			border-radius: 5px;
			background: #9e9e9e;
			margin-bottom: 5%;
			overflow: hidden;
		}

		.boxCart a {
			color: white;
		}

		.boxCart img {
			height: 68px;
			width: 30%;
			margin: 4%;
			float: left;
			border-radius: 3px;
			object-fit: contain;
		}

		/* 右边内容里每一项里文字信息 */
		.boxCartTitleInfo {
			width: 59%;
			margin-left: 35%;
			padding-top: 2%;
			font-size: 16px;
			overflow: hidden;
		}

		/* 右边内容里每一项里文字信息的小标题 */
		.boxCartTitleInfo>.bcTitle {
			font-size: 19px;
			font-weight: 600;
			height: 29px;
			overflow: hidden;
		}

		.boxCartTitleInfo hr {
			width: 34%;
			margin: 0;
		}

		/* 右边内容里每一项里文字信息的简介 */
		.boxCartTitleInfo>.bcInfo {
			height: 48px;
			overflow: hidden;
		}

		.boxCartTitleInfo>* {
			margin: 1%;
		}

		/* 聚焦颜色变换 */
		.ts1 {
			-webkit-transform: perspective(1px) translateZ(0);
			transform: perspective(1px) translateZ(0);
			box-shadow: 0 0 1px transparent;
			-webkit-transition-property: color;
			transition-property: color;
			-webkit-transition-duration: 0.3s;
			transition-duration: 0.3s;
		}

		.ts1:before {
			content: "";
			position: absolute;
			z-index: -1;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: #81c784;
			border-radius: 100%;
			-webkit-transform: scale(0);
			transform: scale(0);
			-webkit-transition-property: transform;
			transition-property: transform;
			-webkit-transition-duration: 0.3s;
			transition-duration: 0.3s;
			-webkit-transition-timing-function: ease-out;
			transition-timing-function: ease-out;
		}

		.ts1:hover:before,
		.ts1:focus:before,
		.ts1:active:before {
			-webkit-transform: scale(2);
			transform: scale(2);
		}
	</style>
		
	<%
	let box = [];
	if (site.data && site.data.box) {
		box = site.data.box
	}
	%>
	
	<br>
	<div class="container">
		<div class="row box">
			
			<!-- 菜单 -->
			<div class="hide-on-med-and-down col l3 m3 s12 boxNavDiv side-nav">
				<div class="boxLogoDiv center-align"><span style=" background-color: rgba(255,255,255,0.7);padding: 2%;">Athink_box</span></div>
				<div class="boxNav">
					<% if (box.length>0) { %>
					    <% for (var i = 0, len =box.length; i < len; i++) { %>
					    	<a href="#m<%-i%>" class="waves-teal btn-flat waves-effect waves-green"><%- box[i].title %></a>
					    <% } %>
					<% }%>
				</div>
			</div>
			
			<!-- 内容 -->
			<div class="col l9 m9 s12 boxContentDiv ">
				<% if (box.length>0) { %>
				    <% for (var i = 0, len =box.length; i < len; i++) { %>
						<div id="m<%-i%>" class="row boxContent ">
							<div class="boxContentTitle m12 center-align"><%- box[i].title %></div><hr>
							<div class="row boxCarts">
								<% for (var j = 0, len2 =box[i].sites.length; j < len2; j++) { %>
									<div class="col m4 s12 l4">
										<div class="boxCart ts1">
											<a href="<%- box[i].sites[j].href %>">
												<img src="<%- box[i].sites[j].logo %>" class="boxCartIcon">
												<div class="boxCartTitleInfo">
													<div class="bcTitle"><%- box[i].sites[j].name %></div><hr />
													<div class="bcInfo"><%- box[i].sites[j].desc %></div>	
												</div>
											</a>
										</div>
									</div>
								<% } %>
							</div>
						</div>
				    <% } %>
				<% } %>
			</div>
			
		</div>
	</div>
</main>